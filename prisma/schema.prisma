// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  email       String    @unique
  companyName String
  phoneNumber String
  password    String
  avatar      String?
  birth       DateTime?
  country     String?
  state       String?
  city        String?
  Street      String?
  team        Team[]
}

model Project {
  id            Int       @id @default(autoincrement())
  projectName   String    @unique
  projectStatus String
  projectType   String
  effectDate    DateTime?
  startDate     String?
  endDate       String?
  description   String
  securityLevel String
  team          Team      @relation(fields: [teamId], references: [id])
  teamId        Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Team {
  id          Int       @id @default(autoincrement())
  teamMember  User[]
  teamName    String    @unique
  description String?
  project     Project[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  role        Role[]
}

model Role {
  id        Int      @id @default(autoincrement())
  roleName  String
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Team      Team     @relation(fields: [teamId], references: [id])
  teamId    Int
}
